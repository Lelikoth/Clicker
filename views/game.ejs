                    }
                    else{
                        alert("You don't have enough Pepe Points")
                    }
                }
            </script>

        </div>

        
        <div class="pepebutton">

            <img src="/img/pepe_ree.gif" alt="Reeeee Pepe">
            <button onclick="myfunction7()">
                10 000 Pepe Points
            <script>
                function myfunction7(){
                    let pepePoints = document.querySelector("#pepePoints").innerHTML;

                    if(pepePoints >= 10000){
                        pepePoints -= 10000;
                        document.querySelector("img").src = "/img/pepe_ree.gif";
                        document.querySelector("#pepePoints").innerHTML = pepePoints;
                        document.querySelector("#sendPoints").value = pepePoints;
                        document.querySelector("#sendSkin").value = 6;                  
                    }
                    else{
                        alert("You don't have enough Pepe Points")
                    }
                }
            </script>

        </div>
        
    </div>

</body>

    
</html>