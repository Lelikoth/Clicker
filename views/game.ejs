<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel = "icon" href = "/img/pepe the frog.ico" type = "image/x-icon">
    <title>Pepe Clicker</title>

</head>
<body>
    <audio loop autoplay><source src="music/elevator.mp3"></audio>
    <h3 id="Points">
        <%= pepe_points %>
    </h3>
    <h3 id="Skin">
        <%= pepe_type %>
    </h3>
    <h1>Pepe Clicker</h1>
    <div>
        
        <button onclick="myfunction()" class="pepebutton" >
            <img src="/img/pepe_sad.png" alt="Sad Pepe">
        </button>
        <script>
            let pepePoints = document.querySelector("#Points").innerHTML;
            let pepeSkin = document.querySelector("#Skin").innerHTML;
        
            window.onload = function(){
                document.querySelector("#pepePoints").innerHTML = pepePoints;
                document.querySelector("#sendPoints").value = pepePoints;
                document.querySelector("#sendSkin").value = pepeSkin;
                
                if(pepeSkin == 1)
                {
                    document.querySelector("img").src = "/img/happy_pepe.png";
                }
                else if(pepeSkin == 2)
                {
                    document.querySelector("img").src = "/img/pepe_clown.png";
                }
                else if(pepeSkin == 3)
                {
                    document.querySelector("img").src = "/img/pepe_cry.png";
                }
                if(pepeSkin == 4)
                {
                    document.querySelector("img").src = "/img/pepe_pope.jpg";
                }
                else if(pepeSkin == 5)
                {
                    document.querySelector("img").src = "/img/pepe_black.jpg";
                }
                else if(pepeSkin == 6)
                {
                    document.querySelector("img").src = "/img/pepe_ree.gif";
                }
            }
            function myfunction(){
                pepePoints++;
                document.querySelector("#pepePoints").innerHTML = pepePoints;
                document.querySelector("#sendPoints").value = pepePoints;
                document.querySelector("#sendSkin").value = pepeSkin;
                
                                
            }
        </script>
    </div>
    <h2>Pepe Points: </h2>
    <h2 id="pepePoints"> </h2>
    <form action="/save" method="POST">
        <button type="submit">Save progress</button>
        <input type="hidden" name="pepePoints" value="0" id="sendPoints">
        <input type="hidden" name="pepeSkin" value="0" id="sendSkin">

    </form>
    <form action="/logout" method="POST">
        <button type="submit">Logout</button>
    </form>

    <div id="sixBox">
        <div class="pepebutton">

            <img src="/img/happy_pepe.png" alt="Happy Pepe">
            <button onclick="myfunction2()">
                30 Pepe Points
            <script>
                function myfunction2(){
                    let pepePoints = document.querySelector("#pepePoints").innerHTML;
                    if(pepePoints >= 30){
                        pepePoints -= 30;
                        document.querySelector("img").src = "/img/happy_pepe.png";
                        document.querySelector("#pepePoints").innerHTML = pepePoints;
                        document.querySelector("#sendPoints").value = pepePoints;
                        document.querySelector("#sendSkin").value = 1;                  
                    }
                    else{
                        alert("You don't have enough Pepe Points")
                    }
                }
            </script>

        </div>

        
        <div class="pepebutton">

            <img src="/img/pepe_clown.png" alt="Clown Pepe">
            <button onclick="myfunction3()">
                200 Pepe Points
            <script>
                function myfunction3(){
                    let pepePoints = document.querySelector("#pepePoints").innerHTML;

                    if(pepePoints >= 200){
                        pepePoints -= 200;
