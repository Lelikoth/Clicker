                        document.querySelector("#sendSkin").value = 3;                  
                    }
                    else{
                        alert("You don't have enough Pepe Points")
                    }
                }
            </script>

        </div>

        
        <div class="pepebutton">

            <img src="/img/pepe_pope.jpg" alt="Pope Pepe">
            <button onclick="myfunction5()">
                2 137 Pepe Points
            <script>
                function myfunction5(){
                    let pepePoints = document.querySelector("#pepePoints").innerHTML;

