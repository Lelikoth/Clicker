                        document.querySelector("#sendSkin").value = 4;                  
                    }
                    else{
                        alert("You don't have enough Pepe Points")
                    }
                }
            </script>

        </div>

        
        <div class="pepebutton">

            <img src="/img/pepe_black.jpg" alt="Black Pepe">
            <button onclick="myfunction6()">
                5 000 Pepe Points
            <script>
                function myfunction6(){
                    let pepePoints = document.querySelector("#pepePoints").innerHTML;

                    if(pepePoints >= 5000){
                        pepePoints -= 5000;
                        document.querySelector("img").src = "/img/pepe_black.jpg";
